export SSH_OPTS="-o StrictHostKeyChecking=no"

# step 1: create the droplet
doctl compute droplet create FwkCompileDroplet --image debian-9-x64 --region sfo2 --size 512mb --ssh-keys d7:86:c9:5a:d7:a3:92:55:44:bc:4d:cb:10:51:1c:f8 --format ID > result.txt
export DROPLET_ID=`tail -1 result.txt`
export DROPLET_IP=`doctl compute droplet get $DROPLET_ID --format PublicIPv4 | tail -1`

make clean
tar cfz ../src.tar.gz .

# step 2: setup an environment for building
ssh $SSH_OPTS root@$DROPLET_IP "apt-get update && apt-get install build-essential zlib1g-dev llvm clang-3.8 -y && ln -s /usr/bin/clang-3.8 /usr/bin/clang && ln -s /usr/bin/clang++-3.8 /usr/bin/clang++"
scp $SSH_OPTS ../src.tar.gz root@$DROPLET_IP:/root/src.tar.gz
ssh $SSH_OPTS root@$DROPLET_IP "cd /root && mkdir src && cd src && mv ../src.tar.gz . && tar xfz src.tar.gz && make"
scp $SSH_OPTS root@$DROPLET_IP:/root/src/lib/libfmf.so lib/debian_x64_libfmf.so
# step 3: delete the droplet
doctl compute droplet delete $DROPLET_ID --force
rm result.txt
rm ../src.tar.gz
